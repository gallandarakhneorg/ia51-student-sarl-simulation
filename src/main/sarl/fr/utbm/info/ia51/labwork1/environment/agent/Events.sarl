package fr.utbm.info.ia51.labwork1.environment.^agent

import fr.utbm.info.ia51.framework.math.Point2i
import fr.utbm.info.ia51.labwork1.environment.maze.PacmanObject
import java.util.List
import java.util.UUID
import fr.utbm.info.ia51.labwork1.environment.maze.Direction

/** Perception for an agent.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event Perception {
	
	val time : int
	val objects : List<PacmanObject>
	val position : Point2i
	val bodyId : UUID
	
	new (time : int, bodyID : UUID, objects : List<PacmanObject>, position : Point2i) {
		this.time = time
		this.bodyId = bodyID
		this.objects = objects
		this.position = position
	}
	
}

/** Action from an agent.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event Action {
	
	val time : int
	val direction : Direction
	
	new (time : int, direction : Direction) {
		this.time = time
		this.direction = direction
	}
	
}

/** Run the end of the simulation step.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event RunEndOfStep

/** Run the begining of the simulation step.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event RunBeginingOfStep


/** Run the pacman is dead.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
event PacManIsDead
